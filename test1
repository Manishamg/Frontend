pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/Manishamg/Frontend.git', branch: 'main'
            }
        }
        stage('Build') {
            steps {
                // Add build steps here if needed
            }
        }
        stage('Deploy') {
            steps {
                sshagent(['SSH_GITHUB']) {
                    sh '''
                    ssh -o StrictHostKeyChecking=no ec2-user@54.163.22.206 << EOF
                    cd /var/www/html
                    git clone https://github.com/Manishamg/Frontend.git .
                    sudo systemctl restart httpd
                    EOF
                    '''
                }
            }
        }
    }
}
