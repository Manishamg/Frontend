pipeline {
    agent any
    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/Manishamg/Frontend.git'
            }
        }
        stage('Build and Deploy') {
            steps {
                script {
                    // Create a directory for the application
                    sh 'sudo mkdir -p /var/www/html/frontend'
                    // Copy the application files to the Apache document root
                    sh 'sudo cp -r * /var/www/html/frontend/'
                    // Set the correct permissions
                    sh 'sudo chown -R apache:apache /var/www/html/frontend'
                    sh 'sudo chmod -R 755 /var/www/html/frontend'
                    // Restart Apache to apply changes
                    sh 'sudo systemctl restart httpd'
                }
            }
        }
    }
    post {
        always {
            echo "end of pipeline"
    }
}
